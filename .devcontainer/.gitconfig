[alias]
        lg = log --graph --pretty=format:'%Cred%h%Creset - %Cblue%an%Creset %C(yellow)%d%Creset %s %Cgreen(%ci)%Creset' --abbrev-commit

        brd = "! f() { for k in $(git branch $@ | sed 's/^..//; s/ .*//'); do git log -1 --pretty='%Cgreen%ci %Cblue(%cr) %C(yellow)%an%Creset %C(cyan)'$k'' $k ; done | sort -r; }; f"

        authors = log --format="%aN"

    squash-from-origin = "!f() { \
        base=$(git merge-base $(git rev-parse --abbrev-ref HEAD) $(git for-each-ref --format='%(upstream:short)' $(git symbolic-ref -q HEAD))); \
        git reset --soft $base && git commit --edit --message \"$(git log --format=%B --reverse $base..HEAD)\"; \
    }; f"

        nuke = clean -fdqx '&& git reset --hard'

        subs-init = submodule update --recursive --init

        subs-reset = subs-recurse 'git reset --hard && git checkout $(git branch-default)'

        subs-remote = "submodule update --recursive --remote"

        subs-recurse = "submodule foreach --recursive"

[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
